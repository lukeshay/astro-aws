{
	"name": "@astro-aws/adapter",
	"version": "0.2.0",
	"description": "An adapter for deploying an Astro application to AWS Lambda",
	"keywords": [
		"withastro",
		"renderer",
		"performance",
		"perf",
		"astro-adapter",
		"aws",
		"aws-lambda"
	],
	"homepage": "https://astro-aws.org/",
	"repository": {
		"type": "git",
		"url": "ssh://git@github.com/lukeshay/astro-aws.git",
		"directory": "packages/adapter"
	},
	"license": "MIT",
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./lambda/index": {
			"import": "./dist/lambda/index.js",
			"types": "./dist/lambda/index.d.ts"
		},
		"./lambda/index.js": {
			"import": "./dist/lambda/index.js",
			"types": "./dist/lambda/index.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "scripts build",
		"test": "vitest run"
	},
	"eslintConfig": {
		"extends": [
			"../../.eslintrc.cjs"
		],
		"root": false
	},
	"dependencies": {
		"@astrojs/webapi": "^2.0.0",
		"esbuild": "^0.17.7",
		"merge-anything": "^5.1.4"
	},
	"devDependencies": {
		"@astro-aws/scripts": "workspace:^",
		"@faker-js/faker": "^7.6.0",
		"@types/aws-lambda": "^8.10.110",
		"@types/node": "^18.13.0",
		"astro": "^2.0.10",
		"aws-lambda": "^1.0.7",
		"eslint": "^8.34.0",
		"prettier": "^2.8.4",
		"typescript": "^4.9.5",
		"vitest": "^0.28.4"
	},
	"peerDependencies": {
		"astro": ">=1"
	},
	"engines": {
		"node": "16.x || 18.x"
	},
	"publishConfig": {
		"access": "public"
	}
}
