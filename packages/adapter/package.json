{
	"name": "@astro-aws/adapter",
	"version": "0.4.0",
	"description": "An adapter for deploying an Astro application to AWS Lambda",
	"keywords": [
		"withastro",
		"renderer",
		"performance",
		"perf",
		"astro-adapter",
		"aws",
		"aws-lambda"
	],
	"homepage": "https://astro-aws.org/",
	"repository": {
		"type": "git",
		"url": "ssh://git@github.com/lukeshay/astro-aws.git",
		"directory": "packages/adapter"
	},
	"license": "MIT",
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./lambda/index": {
			"import": "./dist/lambda/index.js",
			"types": "./dist/lambda/index.d.ts"
		},
		"./lambda/index.js": {
			"import": "./dist/lambda/index.js",
			"types": "./dist/lambda/index.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "scripts build",
		"test": "vitest run"
	},
	"eslintConfig": {
		"extends": [
			"../../.eslintrc.cjs"
		],
		"root": false
	},
	"dependencies": {
		"@astrojs/webapi": "^2.2.0",
		"esbuild": "^0.19.4",
		"merge-anything": "^5.1.7"
	},
	"devDependencies": {
		"@astro-aws/scripts": "workspace:^",
		"@faker-js/faker": "^8.1.0",
		"@types/aws-lambda": "^8.10.124",
		"@types/node": "^18.18.0",
		"astro": "^3.2.3",
		"aws-lambda": "^1.0.7",
		"eslint": "^8.51.0",
		"prettier": "^3.0.3",
		"typescript": "^5.2.2",
		"vitest": "^0.34.6"
	},
	"peerDependencies": {
		"astro": ">=1"
	},
	"engines": {
		"node": "18.x"
	},
	"publishConfig": {
		"access": "public"
	}
}
