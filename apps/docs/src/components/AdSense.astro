---
interface Props {
	adSlot: string;
}

const { adSlot } = Astro.props;
---

<script
	async
	src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-1372217439158608"
	crossorigin="anonymous"></script>
<ins
	class="adsbygoogle"
	style="display:block"
	data-ad-client="ca-pub-1372217439158608"
	data-ad-slot={adSlot}
	data-ad-format="auto"
	data-full-width-responsive="true"></ins>
<script>
  // @ts-ignore
	;(adsbygoogle = window.adsbygoogle || []).push({})
</script>
