---
import { Link } from "astro-link";
import GithubIcon from "../icons/GithubIcon.astro";
import Logo from "../Logo.astro";

export type Props={
	links: { href: string; text: string }[];
	showLogo?: boolean;
};

const { links, showLogo = false } = Astro.props;

const wrapperClass = showLogo ? "justify-between" : "";
---

<div
	class={`${wrapperClass} inset-x-0 w-full fixed top-0 z-20 flex flex-row items-center bg-base-100 bg-opacity-95 backdrop-blur-md pr-4`}
>
	<div class="flex-1 pl-10">
		{showLogo && <Logo />}
	</div>
	<div class="flex-none">
		<nav class="navbar">
			{
				links.map(({ href, text }) => (
					<Link class="btn btn-ghost text-base normal-case no-underline" href={href}>
						{text}
					</Link>
				))
			}
			<Link class="btn btn-ghost text-base normal-case no-underline" href="https://github.com/lukeshay/astro-aws">
				<GithubIcon />
			</Link>
		</nav>
	</div>
</div>
